<form class="edit-form" onsubmit={{action "submitForm" }}>
    <div class="border border-dark rounded p-4 mb-4">
        <h4>Дата встречи</h4>
        <div class="row h-100 justify-content-between mb-4">
            <div class="col-md-auto">
                {{input/input-datepicker value=dataMeeting }}
            </div>
        </div>
        <div class="row h-100 justify-content-between">
            <div class="col-md-auto">
                <h4>Список докладов</h4>
            </div>
            <div class="col-md-auto">
                <button type="button" class="btn btn-edit" onclick={{action "addReport" }}>
                    <svg viewBox="0 0 16 16" class="bi bi-plus-square card-button" fill="currentColor"
                        xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                </button>
            </div>
        </div>
        <ul class="list-group">
            {{#each reports as |report|}}
            {{meeting-form/report
            report=report
            updataReport=(action "updataReport" report)
            deleteReport=(action "deleteReport" report.id)}}
            {{/each}}
        </ul>
    </div>
    <div class="form-group row">
        <div class="col-12 text-right">
            <button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
            {{#link-to
            "meetings"
            type="submit"
            class="btn btn-outline-secondary btn-lg"
            }}
            Отмена
            {{/link-to}}
        </div>
    </div>
</form>
{{meeting-form/report-form
report=reportForm
listBook=listBook
listSpeaker=listSpeaker
Modaltitle=Modaltitle
idModal=idModal
saveReport = (action "saveReport")
}}
